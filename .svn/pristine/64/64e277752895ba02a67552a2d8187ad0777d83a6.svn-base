import React, {useState} from 'react';
//import react in our code.
import {View, Text, Image, TouchableOpacity} from 'react-native';
//import all the components we are going to use.
import {Menu, MenuItem, MenuDivider} from 'react-native-material-menu';
//import menu and menu item
import DeviceInfo from 'react-native-device-info';

const CustomMaterialMenu = ({
  isIcon,
  menuText,
  textStyle,
  route,
  navigation,
}) => {
  const [visible, setVisible] = useState(false);
  const hideMenu = () => setVisible(false);
  const showMenu = () => setVisible(true);
  const [headphone, setHeadphone] = useState(false);

  DeviceInfo.isHeadphonesConnected().then(enabled => {
    if (enabled) {
      setHeadphone(enabled);
    } else {
      setHeadphone(enabled);
    }
  });

  return (
    <View>
      <Menu
        visible={visible}
        anchor={
          isIcon ? (
            <TouchableOpacity onPress={showMenu}>
              <Image
                source={require('../SideMenu/View_more2.png')}
                style={{
                  width: 25,
                  height: 25,
                  marginRight: 20,
                  tintColor: !headphone ? 'green' : 'red',
                }}
              />
            </TouchableOpacity>
          ) : (
            <Text onPress={showMenu} style={textStyle}>
              {menuText}
            </Text>
          )
        }
        onRequestClose={hideMenu}>
        <MenuItem
          onPress={() => {
            // navigation.navigate('Profile');
            hideMenu();
          }}>
          <Text>
            {!headphone ? (
              <Text>headphone is Not connected</Text>
            ) : (
              <Text>headphone is connected</Text>
            )}
          </Text>
        </MenuItem>

        <MenuItem
          onPress={() => {
            // navigation.navigate('ChangePassword');
            hideMenu();
          }}>
          Change Password
        </MenuItem>
        <MenuItem
          onPress={() => {
            // navigation.navigate('Pushmessaging');
            hideMenu();
          }}>
          Messages
        </MenuItem>
        <MenuItem
          onPress={() => {
            // navigation.navigate('Download');
            hideMenu();
          }}>
          Download
        </MenuItem>
        <MenuItem
          onPress={() => {
            //  navigation.navigate('GetToken');
            hideMenu();
          }}>
          GetToken
        </MenuItem>
        <MenuItem
          onPress={() => {
            // navigation.navigate('Table');
            hideMenu();
          }}>
          Table
        </MenuItem>
        <MenuItem
          onPress={() => {
            //  navigation.navigate('Connected');
            hideMenu();
          }}>
          Connected
        </MenuItem>
        <MenuItem
          onPress={() => {
            // navigation.navigate('AddToCartLIst');
            hideMenu();
          }}>
          AddToCartLIst
        </MenuItem>
      </Menu>
    </View>
  );
};

export default CustomMaterialMenu;
